@model JobPortalWebsiteMVC.Models.Jobsearch

@{
    ViewBag.Title = "jobview_pageload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Explore Oppertunities : Find Your Dream Job</h2>
<br />
@using (Html.BeginForm("searchjob_click","JobView", FormMethod.Post))
{
    <table style="width: 100%; border: 1px solid lightgray; background-color: LightGray; ">
        <tr>
            <td style="width: 25%; padding-right: 10px;">
                @Html.TextBoxFor(m => m.insertse.Job_Skills, new { @style = "width: 100%;", placeholder = "Skills" })
            </td>
            <td style="width: 25%; padding-right: 10px;">
                @Html.TextBoxFor(m => m.insertse.Job_Experience, new { @style = "width: 100%;", placeholder = "Experience" })
             </td>
            <td style="width: 25%; padding-right: 10px;">
                @Html.TextBoxFor(m => m.insertse.Job_Location, new { @style = "width: 100%;", placeholder = "Location" })
            </td>
            <td style="width: 25%; text-align: right;">
                <input type="submit" value="Search" class="buttons" style="background-color: navy; color: white; padding: 5px 10px;" />
            </td>
         </tr>
    </table>

}
<br />
<table class="table w3-container">
    <tr>
        <th>
            <label>Company</label>
        </th>
        <th>
            <label>Job</label>
        </th>
        <th>
            <label>Description</label>
        </th>
        <!--<th>-->
            @*<label>JobType</label>*@
        <!--</th>-->
        <th>
            <label>Experience</label>
        </th>
        <th>
            <label>Skills</label>
        </th>
        <th>
            <label>Salary</label>
        </th>
        <th>
            <label>End Date</label>
        </th>
        <th>
            <label>Location</label>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.selectjob)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Company_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Job_Tittle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Job_description)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.jobtype_name)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Job_Experience)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Job_Skills)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Job_Salary)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Job_enddate)*@
                @item.Job_enddate.ToString("MM/dd/yyyy")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Job_Location)
            </td>
            <td>
                @Html.ActionLink("ApplyNow", "Apllication_load", "AddApplication", new { jid = item.Job_id,cid=item.Company_id}, new { @class = "button" })

            </td>
        </tr>
    }

</table>



<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color:lightgray;
    }

    th {
        background-color: dodgerblue;
        color: white;
    }

    .button {
        padding: 5px 15px;
        border: none;
        background-color: lightseagreen;
        color: white;
        border-radius: 4px;
        cursor: pointer;
        width: 100%;
        height: 80px;
        margin-top: 10px;
    }
    .buttons {
        padding: 5px 15px;
        border: none;
        background-color: midnightblue;
        color: white;
        border-radius: 4px;
        cursor: pointer;
        width: 100%;
        height: 38px;
        margin-top: 10px;
    }
</style>
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
