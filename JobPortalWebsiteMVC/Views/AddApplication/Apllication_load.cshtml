@model JobPortalWebsiteMVC.Models.Applicationcls
@{
    ViewBag.Title = "Apllication_load";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card">
    <div class="row">
        <div class="column">
            <h2 style="text-align:center">Job Application</h2>
            <table>
                @foreach (var item in Model.selectjobdetails)
                {
                    <tr>
                        <td>
                            <h2><b> @Html.DisplayFor(modelItem => item.Job_Tittle)</b></h2>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Job_description)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Job Type : </label>
                            @Html.DisplayFor(modelItem => item.jobtype_name)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Experience : </label>
                            @Html.DisplayFor(modelItem => item.Job_Experience)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Skills : </label>
                            @Html.DisplayFor(modelItem => item.Job_Skills)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Salary : </label>
                            @Html.DisplayFor(modelItem => item.Job_Salary)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>End Date : </label>
                            @item.Job_enddate.ToString("MM/dd/yyyy")
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Location : </label>
                            @Html.DisplayFor(modelItem => item.Job_Location)
                        </td>
                    </tr>
                }
            </table>
            <br />
            @using (Html.BeginForm("Application_click", "AddApplication", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <table>
                    <tr>
                        <td>
                            <div>
                                <label>Add Resume</label>
                                @Html.TextBox("file", "", new { type = "file" })
                            </div>
                        </td>
                    </tr>
                    <tr>
                        @if (ViewBag.isapplied == 1)
                        {
                            <td>
                                <input id="Button1" type="button" value="Already Applied" class="button" style="text-align:center" disabled />
                            </td>
                        }
                        else
                        {
                            <td>
                                <input id="Submit1" type="Submit" value="Submit Your Application" class="button" style="text-align:center" />
                            </td>
                        }
                    </tr>
                </table>
            }
            @if (ViewBag.Message != null)
            {
                <script type="text/javascript">
                     window.onload = function () {
                     alert("@ViewBag.Message");
                     };
                </script>
            }
        </div>
    </div>
</div>



<style>
    body {
        background-color: cadetblue;
    }

    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        transition: 0.3s;
        /*width: fit-content;*/
        width: fit-content;
        height: auto;
        margin: 5% auto;
        background-color: white;
        padding: 20px;
        border-radius: 10px;
        box-sizing: border-box;
    }

        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
        }

    .column {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 0;
    }

    table {
        table-layout: fixed;
    }

    td {
        /*padding: 10px;*/
        padding-left: 50px;
        padding-right: 50px;
        padding-top: 20px;
    }

    .button {
        padding: 10px 15px;
        border: none;
        background-color: blue;
        color: white;
        border-radius: 4px;
        cursor: pointer;
        width: 150%; /* Full width for the button */
        height: 45px;
        margin-top: 10px;
    }
</style>


