@model JobPortalWebsiteMVC.Models.Userregcls
@{
    ViewBag.Title = "EditUserReg_load";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="card">
    <div class="row">
        <div class="column">
            <h2><b>Update UserDetails</b></h2>
            <br />
            @using (Html.BeginForm("EditUserReg_Click", "EditUserReg", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <table>
                    <tr>
                        <td>
                            <label>Name</label>
                        </td>
                        <td>
                            @Html.TextBoxFor(m => m.Name, new { @style = "width: 300px;" })
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Address</label>
                        </td>
                        <td>
                            @Html.TextAreaFor(m => m.Address, new { @style = "width: 300px;" })
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Email</label>
                        </td>
                        <td>
                            @Html.TextBoxFor(m => m.Email, new { @style = "width: 300px;" })
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Phone Number</label>
                        </td>
                        <td>
                            @Html.TextBoxFor(m => m.PhoneNumber, new { @style = "width: 300px;" })
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <input type="submit" value="Update" class="button"/>
                        </td>
                    </tr>
                </table>

            }

        </div>
    </div>
</div>


<style>
    body {
        background-color: cadetblue;
    }

    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        transition: 0.3s;
        /*width: fit-content;*/
        width: fit-content;
        height: auto;
        margin: 5% auto;
        background-color: white;
        padding: 20px;
        border-radius: 10px;
        box-sizing: border-box;
    }

        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
        }

    .column {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 0;
    }

    table {
        table-layout: fixed;
    }

    td {
        /*padding: 10px;*/
        padding-left: 50px;
        padding-right: 50px;
        padding-top: 20px;
    }

    .button {
        padding: 10px 15px;
        border: none;
        background-color: blue;
        color: white;
        border-radius: 4px;
        cursor: pointer;
        width: 100%; /* Full width for the button */
        height: 45px;
        margin-top: 10px;
    }
</style>