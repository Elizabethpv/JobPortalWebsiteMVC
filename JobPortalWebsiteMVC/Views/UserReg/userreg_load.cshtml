@model JobPortalWebsiteMVC.Models.Userregcls
@{
    ViewBag.Title = "userreg_load";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="row">
        <div class="column">
            <h2><b>User Registration</b></h2>
            <br />
            @using (Html.BeginForm("userreg_click", "UserReg", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <table>
                    <tr>
                        <td>
                            <div>
                                <label>Name</label>
                            </div>
                            <div>
                                @Html.TextBoxFor(m => m.Name, new { @style = "width: 100%;" })
                                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                            </div>
                        </td>
                        <td>
                            <div>
                                <label>Address</label>
                            </div>
                            <div>
                                @Html.TextAreaFor(m => m.Address, new { @style = "width: 100%;" })
                                @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div>
                                <label>Email</label>
                            </div>
                            <div>
                                @Html.TextBoxFor(m => m.Email, new { @style = "width: 100%;" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                        </td>
                        <td>
                            <div>
                                <label>Gender</label>
                            </div>
                            <div>

                                @Html.RadioButtonFor(m => m.Gender, "male")
                                Male
                                @Html.RadioButtonFor(m => m.Gender, "female")
                                Female
                                <br />@Html.ValidationMessageFor(m => m.Gender, "", new { @class = "text-danger" })
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div>
                                <label>Date Of Birth</label>
                            </div>
                            <div>
                                @Html.TextBoxFor(m => m.DateOfBirth, new { @type = "date", @class = "form-control", @style = "width: 100%;" })
                                @Html.ValidationMessageFor(m => m.DateOfBirth, "", new { @class = "text-danger" })
                            </div>
                        </td>
                        <td>
                            <div>
                                <label>Phone Number</label>
                            </div>
                            <div>
                                @Html.TextBoxFor(m => m.PhoneNumber, new { @style = "width: 100%;" })
                                @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div>
                                <label>Profile Image</label>
                            </div>
                            <div>
                                @Html.TextBox("file", "", new { type = "file", @style = "width: 100%;" })
                               
                            </div>
                        </td>
                        <td>
                            <div>
                                <label>User Name</label>
                            </div>
                            <div>
                                @Html.TextBoxFor(m => m.username, new { @style = "width: 100%;" })
                                @Html.ValidationMessageFor(m => m.username, "", new { @class = "text-danger" })
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div>
                                <label>Password</label>
                            </div>
                            <div>
                                @Html.TextBoxFor(m => m.password, new { @style = "width: 100%;" })
                            </div>
                        </td>
                        <td>
                            <div>
                                <label>Confirm Password</label>
                            </div>
                            <div>
                                @Html.TextBoxFor(m => m.cpassword, new { @style = "width: 100%;" })
                                @Html.ValidationMessageFor(m => m.cpassword, "", new { @class = "text-danger" })
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                        </td>
                        <td>
                            <input type="submit" value="Register" class="button" />
                        </td>
                    </tr>
                </table>
            }

        </div>
    </div>
</div>




@if (ViewBag.Message != null)
{
    <script type="text/javascript">
                     window.onload = function () {
                         alert("@ViewBag.Message");
                         document.getElemntById("txt1").value = "";
                         document.getElemntById("txt2").value = "";
                         document.getElemntById("drpty").value = "";
                         document.getElemntById("txt3").value = "";
                         document.getElemntById("txt4").value = "";
                         document.getElemntById("txt5").value = "";
                         document.getElemntById("dtp").value = "";
                     };
    </script>
}

<style>
    body {
        background-color: cadetblue;
    }

    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        transition: 0.3s;
        /*width: fit-content;*/
        width: fit-content;
        height: auto;
        margin: 5% auto;
        background-color: white;
        padding: 20px;
        border-radius: 10px;
        box-sizing: border-box;
    }

        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
        }

    .column {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 0;
    }

    table {
        table-layout: fixed;
    }

    td {
        /*padding: 10px;*/
        padding-left: 50px;
        padding-right: 50px;
        padding-top: 20px;
    }

    .button {
        padding: 10px 15px;
        border: none;
        background-color: blue;
        color: white;
        border-radius: 4px;
        cursor: pointer;
        width: 100%;
        Full width for the button height: 45px;
        margin-top: 10px;
    }
