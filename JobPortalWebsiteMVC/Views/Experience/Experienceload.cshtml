@model JobPortalWebsiteMVC.Models.Experiencecls
@{
    ViewBag.Title = "Experienceload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="row">
        <div class="column">
            <h2><b>Experience</b></h2>
            <br />
            @using (Html.BeginForm("Experience_click", "Experience", FormMethod.Post))
            {
                <table>
                    <tr>
                        <td>
                            <div>
                                <label>Job Tittle</label>
                            </div>
                            <div>
                                @Html.TextBoxFor(m => m.Jobtittle)
                                @Html.ValidationMessageFor(m => m.Jobtittle, "", new { @class = "text-danger" })
                            </div>
                        </td>
                        <td>
                            <div>
                                <label>Company Name</label>
                            </div>
                            <div>
                                @Html.TextBoxFor(m => m.Company_Name)
                                @Html.ValidationMessageFor(m => m.Company_Name, "", new { @class = "text-danger" })
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div>
                                <label>Job Location</label>
                            </div>
                            <div>
                                @Html.TextBoxFor(m => m.Job_location)
                                @Html.ValidationMessageFor(m => m.Job_location, "", new { @class = "text-danger" })
                            </div>
                        </td>
                        <td>
                            <div>
                                <label>Role</label>
                            </div>
                            <div>
                                @Html.TextBoxFor(m => m.Role)
                                @Html.ValidationMessageFor(m => m.Role, "", new { @class = "text-danger" })
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div>
                                <label>Start Date</label>
                            </div>
                            <div>
                                @Html.TextBoxFor(m => m.Sart_Date, new { @type = "date", @class = "form-control", @style = "width: 100%;" })
                                @Html.ValidationMessageFor(m => m.Sart_Date, "", new { @class = "text-danger" })
                            </div>
                        </td>
                        <td>
                            <div>
                                <label>End Date</label>
                            </div>
                            <div>
                                @Html.TextBoxFor(m => m.end_Date, new { @type = "date", @class = "form-control", @style = "width: 100%;" })
                                @Html.ValidationMessageFor(m => m.end_Date, "", new { @class = "text-danger" })
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div>
                                <label>Department</label>
                            </div>
                            <div>
                                @Html.TextBoxFor(m => m.Current_status)
                                @Html.ValidationMessageFor(m => m.Current_status, "", new { @class = "text-danger" })
                            </div>
                        </td>
                        <td>
                            <div>
                                <label>Skills</label>
                            </div>
                            <div>
                                @Html.TextBoxFor(m => m.Skills)
                                @Html.ValidationMessageFor(m => m.Skills, "", new { @class = "text-danger" })
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td rowspan="1">
                            <div>
                                <label>Description</label>
                            </div>
                            <div>
                                @Html.TextAreaFor(m => m.Description)
                                @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                        </td>
                        <td>
                            <div>
                                <input type="submit" value="submit" class="button" />
                            </div>
                        </td>
                    </tr>
                </table>
             }
        </div>
    </div>
</div>





<style>
    body {
        background-color: cadetblue;
    }

    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        transition: 0.3s;
        /*width: fit-content;*/
        width: fit-content;
        height: auto;
        margin: 5% auto;
        background-color: white;
        padding: 20px;
        border-radius: 10px;
        box-sizing: border-box;
    }

        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
        }

    .column {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 0;
    }

    table {
        table-layout: fixed;
    }

    td {
        /*padding: 10px;*/
        padding-left: 50px;
        padding-right: 50px;
        padding-top: 20px;
    }

    .button {
        padding: 10px 15px;
        border: none;
        background-color: blue;
        color: white;
        border-radius: 4px;
        cursor: pointer;
        width: 100%; /* Full width for the button */
        height: 45px;
        margin-top: 10px;
    }
</style>




