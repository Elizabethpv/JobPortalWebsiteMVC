@model JobPortalWebsiteMVC.Models.Resumecls
@{
    ViewBag.Title = "ResumeLoad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="row">
        <div class="column">
            <h2><b>Resume upload</b></h2>
            <br />
            @using (Html.BeginForm("Resume_click", "Resume", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <table>
                    <tr>
                        <td>
                            <div>
                                @Html.TextBox("file", "", new { type = "file" })
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div>
                                <input type="submit" value="submit" class="button" />
                            </div>
                        </td>
                    </tr>                      
                </table>
            }

        </div>
    </div>
</div>


<style>
    body {
        background-color: cadetblue;
    }

    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        transition: 0.3s;
        /*width: fit-content;*/
        width: fit-content;
        height: auto;
        margin: 5% auto;
        background-color: white;
        padding: 20px;
        border-radius: 10px;
        box-sizing: border-box;
    }

        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
        }

    .column {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 0;
    }

    table {
        table-layout: fixed;
    }

    td {
        /*padding: 10px;*/
        padding-left: 50px;
        padding-right: 50px;
        padding-top: 20px;
    }

    .button {
        padding: 10px 15px;
        border: none;
        background-color: blue;
        color: white;
        border-radius: 4px;
        cursor: pointer;
        width: 100%; /* Full width for the button */
        height: 45px;
        margin-top: 10px;
    }
</style>



